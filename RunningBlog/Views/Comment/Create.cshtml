@model RunningBlog.Models.Comment

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Comment</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Content" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PublishedOn" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PublishedOn" class="form-control" />
                <span asp-validation-for="PublishedOn" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PublishedBy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PublishedBy" class="form-control" />
                <span asp-validation-for="PublishedBy" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="PostId" class="col-md-2 control-label"></label>
            <input asp-for="PostId"  />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Details" asp-controller="Post" asp-route-id ="@Model.PostId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
