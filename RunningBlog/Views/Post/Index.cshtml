@model IEnumerable<RunningBlog.Models.Post>
@using static RunningBlog.Helpers.SiteRenderer

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PublishedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastUpdatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PublishedBy)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody >
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.Raw(NewLineToBR(item.Title))
                    </td>
                    <td>
                        @if(item.Photo != null)
                        { 
                            <img src="data:image;base64,@System.Convert.ToBase64String(item.Photo)" width="80" height="80" />
                        }
                    </td>
                    <td>
                        @Html.Raw(NewLineToBR(item.Content))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublishedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastUpdatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublishedBy)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
            <h1> Er zijn nog geen posts !</h1>
}

